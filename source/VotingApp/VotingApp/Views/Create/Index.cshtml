@model VotingApp.Models.CreatedVote
@{
    ViewData["Title"] = "Create Page";
}


<div class="jumbotron jumbotron-fluid full-width" style="margin-bottom: 0px;
    height: 90vh; 
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url(/Images/bannerImage3b.jpg); 
    background-size: cover; 
    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;"> 

    <div class="text-center text-white">
        <h1 class="display-4">Create A New Vote</h1>
        <hr class="mb-4"/>
    </div>
    @if(Model == null)
    {
    <div class="text-center text-white">
               
            <div class="text-center col-md-8 mx-auto">
                <form asp-action="Index" method="post">
                    <div class="form-row mb-4 text-center">
                        <label asp-for="VoteDiscription" class="form-label">Please enter your vote description in the box below (required):</label>
                        <textarea asp-for="VoteDiscription" class="form-control" type="text" rows="3" required></textarea>
                        <span asp-validation-for="VoteDiscription" class="text-danger"></span>
                    </div>
                    <div class="form-row mb-4">
                        <div class="row">
                        <div class="col" >
                            <label asp-for="VoteTypeId" class="control-label">Please choose which type of vote you would like to create:</label>
                            <select asp-for="VoteTypeId" class="form-control" asp-items="ViewBag.VoteTypeId"></select>
                            <span asp-validation-for="VoteTypeId" class="text-danger"></span>
                        </div>
                            <div class="col align-self-center">
                        
                                <input asp-for="Anonymous" class="form-check-input" type="checkbox" value="true" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Is this vote anonymous?
                                </label>
                        
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3 justify-content-center">
                        <h4><u>Voting Type Descriptions:</u></h4>
                        <div class="col-3 justify-content-center">
                            <div class="card justify-content-center">
                                <div class="card-body justify-content-center">
                                    <h5 class="card-title text-black">Yes/No Vote:</h5>
                                    <p class="card-text text-black-50">Voters Will get to choose between two simple options: yes or no.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-light btn-lg bg-success btn-outline-primary">Review</button>
                    </div>
                </form>
            </div>
        
    </div>

    }
    else
    {
    <div class="text-center text-white">
          <div class="text-center col-md-8 mx-auto">
  
            <form asp-action="edit" method="post">
                <input asp-for="Id" type="number" value="@Model.Id" hidden></input>
                <div class="form-row mb-4">
                    <label asp-for="VoteDiscription">Please enter your vote description in the box below (required):</label>
                    <textarea asp-for="VoteDiscription" class="form-control" type="text" rows="3">@Model.VoteDiscription</textarea>
                    <span asp-validation-for="VoteDiscription" class="text-danger"></span>
                </div>
                <div class="form-row mb-4">
                    <div class="row">
                        <div class="col">
                            <label asp-for="VoteTypeId" class="control-label">Please choose which type of vote you would like to create:</label>
                            <select asp-for="VoteTypeId" class="form-control" asp-items="ViewBag.VoteTypeId"></select>
                            <span asp-validation-for="VoteTypeId" class="text-danger"></span>
                        </div>
                        <div class="col align-self-center">

                            <input asp-for="Anonymous" class="form-check-input" type="checkbox" value="true" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                Is this vote anonymous?
                            </label>

                        </div>
                    </div>
                </div>
                <div class="row mb-3 justify-content-center">
                    <h4><u>Voting Type Descriptions:</u></h4>
                    <div class="col-3 justify-content-center">
                        <div class="card justify-content-center">
                            <div class="card-body justify-content-center">
                                <h5 class="card-title text-black">Yes/No Vote:</h5>
                                <p class="card-text text-black-50">Voters Will get to choose between two simple options: yes or no.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-lg bg-success btn-outline-primary">Review</button>
                </div>
            </form>
          </div>
    </div>
    }
</div>