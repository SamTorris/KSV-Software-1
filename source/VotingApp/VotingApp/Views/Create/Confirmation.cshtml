@model VotingApp.ViewModel.CreateVM
@{
    ViewData["Title"] = "Confirmation Page";
}

<div class="row">
    <div class="col-md-12 text-left">
        <form asp-action="BackToIndexPage">
            <button type="submit" class="btn btn-primary">Back</button>
        </form>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Vote Creation Confirmation</h1>
    <hr />
</div>

<div class="text-center">
    <div class="row">
        <div class="form-row mb-2">
            <h3>Vote Description:</h3>
            <h6>(If you would like to change your description press the back button)</h6>
            <form asp-action="Confirmation" method="get">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">@Model.VoteDescription</p>
                    </div>
                </div>
            </form>
        </div>
        <div class ="form-group" >
            <form asp-action="Confirmation" method="post">
                <button type="submit" class="btn btn-primary">Return</button>
            </form>
        </div>
    </div>
</div>
