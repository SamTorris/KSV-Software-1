@using VotingApp.ViewModel
@model AuthorizedUserPageVM
@{
    ViewData["Title"] = "Add Users To Vote";
}
<div class="jumbotron jumbotron-fluid full-width text-white" style="margin-bottom: 0px; 
    height: 90vh; 
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 1)), url(/Images/bannerImage4.jpg); 
    background-size: cover; left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;"> 
    <div class="container text-center text-white">
        <h1 class="display-4">Authorized Users</h1>
        <hr class="mb-4"/>
        <p>Enter in the emails for any users you want to allow to submit votes for this given vote.</p>
        <p>To enter multiple emails separate each emails by comma ex.(example@email.com,example2@email.com)</p>
        <form asp-action="GetUsers" method="post">
            @if (Model != null)
                {
	                <input name="id" type="number" value="@Model.id" hidden></input>
                }
            <div class="row justify-content-center">
            <div class="col-5">
            <div class="form-group">
                        <input required class="form-control col-form-label-lg" name="userListString" type="email" multiple value="@(Model.emails == null ? "" : Model.emails)"/>
                            
                    </div>
             <div class="form-group pt-3">
					<button type="submit" class="btn btn-light btn-lg bg-success btn-outline-primary mb-2">Review</button>
			</div>
            </div>
            </div>
        </form>
</div>
</div>