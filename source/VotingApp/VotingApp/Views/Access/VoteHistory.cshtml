@model IEnumerable<SubmittedVote>
@{
    ViewData["Title"] = "Vote History";
}
<div class="jumbotron jumbotron-fluid full-width text-white" style="margin-bottom: 0px; 
                                                                    height: 90vh; 
                                                                    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 1)), url(/Images/bannerImage4.jpg); 
                                                                    background-size: cover; left: 50%;
                                                                    margin-left: -50vw;
                                                                    margin-right: -50vw;
                                                                    max-width: 100vw;
                                                                    position: relative;
                                                                    right: 50%;
                                                                    width: 100vw;"> 
    <div class="text-center text-white">
        <h1 class="display-4">Vote History</h1>
    </div>
    <div class="container text-dark">
        <div class="accordion" id="accordionExample">
        @foreach(var vote in Model)
        {
            
                <div class="accordion-item">
                    <h2 class="accordion-header" id="@Html.Raw("HeadingA" + vote.Id)">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="@Html.Raw("#collapseA" + vote.Id)" aria-expanded="false" aria-controls="@Html.Raw("collapseA" + vote.Id)">
                            <div class="row">
                                <div class="col">Vote Title: @vote.CreatedVote.VoteTitle</div><div class="col">Date Voted: @vote.DateCast</div> 
                            </div>  
                        </button>
                        
                    </h2>
                    <div id="@Html.Raw("collapseA" + vote.Id)" class="accordion-collapse collapse" aria-labelledby="@Html.Raw("HeadingA" + vote.Id)" data-bs-parent="#accordionExample">
                        <div class="accordion-body text-black">
                            @vote.CreatedVote.VoteDiscription
                            <ul>
                                @foreach (var option in vote.CreatedVote.VoteOptions)
                                {
                                    <li>@option.VoteOptionString</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            
               
        }
        </div>
    </div>
</div>
