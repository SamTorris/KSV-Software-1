
@{
    ViewData["Title"] = "Access Page";
}
<div class="jumbotron jumbotron-fluid full-width justify-content-center" style="margin-bottom: 0px; 
                                                         height: 90vh; 
                                                         background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 1)), url(/Images/bannerImage2.jpg); 
                                                         background-size: cover; 
                                                         left: 50%;
                                                         margin-left: -50vw;
                                                         margin-right: -50vw;
                                                         max-width: 100vw;
                                                         position: relative;
                                                         right: 50%;
                                                         width: 100vw;">
    <div class="text-center pt-5">
        <h2 class="display-4 text-white">Enter Vote Code</h2>
        <hr class="mb-2"/>
    </div>
    <div class="col-sm-2 offset-sm-5  text-center">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
    </div>
<form asp-action="Access" method="get" class="col-lg-6 offset-lg-3 ">
    <div class="row justify-content-center text-center">
        <input class="form-control mb-3" type="text" name="code" required minlength="6" maxlength="6"/>
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary">Submit</button>
        </span>
    </div>
</form>
</div>