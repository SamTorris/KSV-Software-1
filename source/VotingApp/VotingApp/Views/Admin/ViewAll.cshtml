@model IEnumerable<CreatedVote>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

    @foreach (var vote in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>@vote.VoteTitle - @vote.VoteType.VotingType</h3>
            </div>
            <div class="card-body">
                <p>@vote.VoteDiscription</p>
                <h5>Vote Options:</h5>
                <ul>
                    @foreach (var option in vote.VoteOptions)
                    {
                        <li>@option.VoteOptionString</li>
                    }

                </ul>
                <form asp-action="Edit" method="get"><input name="id" type="number" value="@vote.Id" hidden/><button class="btn btn-primary" type="submit" asp-action="Delete" value="@vote.Id">Edit</button></form>
                <form asp-action="Delete" method="get"><input name="id" type="number" value="@vote.Id" hidden/><button class="btn btn-danger" type="submit" asp-action="Delete" value="@vote.Id">Delete</button></form>
            </div>
        </div>
        
        
        
    }

