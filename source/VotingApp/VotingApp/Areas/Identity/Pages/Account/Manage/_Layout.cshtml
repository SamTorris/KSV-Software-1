@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h1 class="text-white mt-4">Manage your account</h1>

<div>
    <h3 class="text-white">Change your account settings</h3>
    <hr class="mt-lg-3" style="border-top: 3px solid white; color: white; background-color: white;">
    <div class="row mt-2">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
