@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}


<div class="jumbotron jumbotron-fluid full-width text-white" style="margin-bottom: 0px;
    height: 90vh; 
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url(/Images/bannerImage5.jpg); 
    background-size: cover; 
    left: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    max-width: 100vw;
    position: relative;
    right: 50%;
    width: 100vw;"> 

    <div class="container text-white">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr class="mt-lg-5" style="border-top: 3px solid white; color: white; background-color: white;">

        <p class="text-white">
            @if(Model.UserEmail == "")
            {
                @Model.StatusMessage
            } else
            {
                @Model.StatusMessage <a href='/Identity/Account/ResendEmailConfirmation/?email=@Model.UserEmail'>here</a> 
            }
        </p>
        <hr />
    </div>
</div>
